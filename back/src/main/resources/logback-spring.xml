<configuration scan="true" scanPeriod="60 seconds">
	<property name="LOG_HOME" value="/applogs/back" />
	
	
	<appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%date %level [%thread] %logger{10} [%file:%line] %msg%n
			</pattern>
		</encoder>
		<!-- 只接收ERROR级别的日志，注：如果填成INFO将只接收INFO级别的日志，其他任何级别的都不接收 -->
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>

	<appender name="Framework"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/frame/Framework-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	
		<appender name="AdminDouniu"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/frame/AdminDouniu-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	
	<appender name="Paywork"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/pay/Paywork-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	
	<appender name="JVMStatus"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/jvminfo/JVMStatus-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="DataSource"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/datasource/DataSource-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="Statistics"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/other/Statistics-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>
	
	<appender name="Authorization"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/other/Authorization-%d{yyyy-MM-dd}.%i.txt
			</fileNamePattern>
			<maxFileSize>10MB</maxFileSize>
			<maxHistory>100</maxHistory>
			<totalSizeCap>30GB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%date %-4relative [%thread] %-5level %logger{35} - %msg%n%n
			</pattern>
		</encoder>
	</appender>

	<!-- 控制台输出，所有错误信息都在此输出 -->
	<root level="ERROR">
		<appender-ref ref="Console" />
	</root>
	<!-- 框架输出 -->
	<logger name="com.joe.frame.pay" level="DEBUG">
		<appender-ref ref="Paywork" />
	</logger>
	
		<!-- 框架输出 -->
	<logger name="com.joe.frame.admin" level="DEBUG">
		<appender-ref ref="AdminDouniu" />
	</logger>
	
	
	<!-- 框架输出 -->
	<logger name="com.joe.frame" level="DEBUG">
		<appender-ref ref="Framework" />
	</logger>
	
	<!-- JVM监控输出 -->
	<logger name="JVMStatus" level="DEBUG">
		<appender-ref ref="JVMStatus" />
	</logger>
	
	<!-- druid数据源logger输出 -->
	<logger name="druid.sql" level="DEBUG">
		<appender-ref ref="DataSource" />
	</logger>
	
	<!-- 统计信息输出 -->
	<logger name="Statistics" level="DEBUG">
		<appender-ref ref="Statistics" />
	</logger>
	
	<!-- 授权认证信息输出 -->
	<logger name="Authorization" level="DEBUG">
		<appender-ref ref="Authorization" />
	</logger>
</configuration>
